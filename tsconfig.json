{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["webpack-env", "jest"],
    "lib": ["esnext", "dom"]
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vue-shims.d.ts"],
  "exclude": ["node_modules"]
}
